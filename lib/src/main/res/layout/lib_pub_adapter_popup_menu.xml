<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:id="@+id/v_menu_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
        android:layout_marginRight="@dimen/lib_pub_dimen_margin"
        android:background="@color/lib_pub_color_text_hint" />

    <TextView
        android:id="@+id/tv_menu_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Operation"
        android:textColor="@color/lib_pub_color_white"
        android:textSize="@dimen/lib_pub_dimen_text_small" />
</LinearLayout>